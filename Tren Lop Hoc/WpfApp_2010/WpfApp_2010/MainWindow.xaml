<Window x:Class="WpfApp_2010.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp_2010"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal">
            <Button x:Name="btnAdmin" Content="Admin" Width="120" Height="40" Margin="10" 
                    FontSize="16" Click="btnAdmin_Click"/>
            <Button x:Name="btnCustomer" Content="Customer" Width="120" Height="40" Margin="10" 
                    FontSize="16" Click="btnCustomer_Click"/>
        </StackPanel>
    </Grid>
</Window>
