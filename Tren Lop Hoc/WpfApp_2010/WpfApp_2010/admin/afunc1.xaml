<Page x:Class="WpfApp_2010.admin.afunc1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp_2010.admin"
      xmlns:vm="clr-namespace:WpfApp_2010.ViewModels"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="1200"
      Title="afunc1">
    
    <Page.DataContext>
        <vm:ProductViewModel/>
    </Page.DataContext>

    <Grid Background="#f8f9fa">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Top Half - Product View -->
        <Border Grid.Row="0" Background="White" Margin="10" CornerRadius="8" 
                BorderBrush="#dee2e6" BorderThickness="1">
            <Grid Margin="15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Header -->
                <TextBlock Grid.Row="0" Text="Product Management" FontSize="20" FontWeight="Bold" 
                           Foreground="#2c3e50" Margin="0,0,0,15"/>
                
                <!-- DataGrid for Products -->
                <DataGrid Grid.Row="1" ItemsSource="{Binding Products}" 
                          SelectedItem="{Binding SelectedProduct, Mode=TwoWay}"
                          AutoGenerateColumns="False" HeadersVisibility="Column" GridLinesVisibility="Horizontal"
                          Background="White" BorderThickness="0" RowBackground="#f8f9fa"
                          AlternatingRowBackground="#e9ecef" FontSize="12">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding ProductId}" Width="60" IsReadOnly="True"/>
                        <DataGridTextColumn Header="Product Name" Binding="{Binding ProductName}" Width="*" IsReadOnly="True"/>
                        <DataGridTextColumn Header="Category" Binding="{Binding Category}" Width="120" IsReadOnly="True"/>
                        <DataGridTextColumn Header="Price" Binding="{Binding Price, StringFormat=C}" Width="100" IsReadOnly="True"/>
                        <DataGridTextColumn Header="Stock" Binding="{Binding Stock}" Width="80" IsReadOnly="True"/>
                        <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="80" IsReadOnly="True"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>
        
        <!-- Bottom Half -->
        <Grid Grid.Row="1" Margin="10,0,10,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="200"/>
            </Grid.ColumnDefinitions>
            
            <!-- Left Side - Input Form -->
            <Border Grid.Column="0" Background="White" CornerRadius="8" 
                    BorderBrush="#dee2e6" BorderThickness="1" Margin="0,0,5,0">
                <Grid Margin="15">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Form Header -->
                    <TextBlock Grid.Row="0" Text="Product Information" FontSize="16" FontWeight="SemiBold" 
                               Foreground="#2c3e50" Margin="0,0,0,15"/>
                    
                    <!-- Input Form -->
                    <StackPanel Grid.Row="1">
                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Product ID:" VerticalAlignment="Center" FontWeight="SemiBold"/>
                            <TextBox Grid.Column="1" Text="{Binding ProductId, Mode=OneWay}" Padding="8" Margin="5,0,0,0" 
                                     IsReadOnly="True" Background="#f8f9fa"/>
                        </Grid>
                        
                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Name:" VerticalAlignment="Center" FontWeight="SemiBold"/>
                            <TextBox Grid.Column="1" Text="{Binding ProductName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                     Padding="8" Margin="5,0,0,0" BorderBrush="#ced4da"/>
                        </Grid>
                        
                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Category:" VerticalAlignment="Center" FontWeight="SemiBold"/>
                            <ComboBox Grid.Column="1" ItemsSource="{Binding Categories}"
                                      SelectedItem="{Binding Category, Mode=TwoWay}"
                                      Padding="8" Margin="5,0,0,0" BorderBrush="#ced4da"/>
                        </Grid>
                        
                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Price:" VerticalAlignment="Center" FontWeight="SemiBold"/>
                            <TextBox Grid.Column="1" Text="{Binding Price, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                     Padding="8" Margin="5,0,0,0" BorderBrush="#ced4da"/>
                        </Grid>
                        
                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Stock:" VerticalAlignment="Center" FontWeight="SemiBold"/>
                            <TextBox Grid.Column="1" Text="{Binding Stock, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                     Padding="8" Margin="5,0,0,0" BorderBrush="#ced4da"/>
                        </Grid>
                        
                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Status:" VerticalAlignment="Center" FontWeight="SemiBold"/>
                            <ComboBox Grid.Column="1" ItemsSource="{Binding Statuses}"
                                      SelectedItem="{Binding Status, Mode=TwoWay}"
                                      Padding="8" Margin="5,0,0,0" BorderBrush="#ced4da"/>
                        </Grid>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- Right Side - Action Buttons -->
            <Border Grid.Column="1" Background="White" CornerRadius="8" 
                    BorderBrush="#dee2e6" BorderThickness="1" Margin="5,0,0,0">
                <StackPanel Margin="15" VerticalAlignment="Center">
                    <TextBlock Text="Actions" FontSize="16" FontWeight="SemiBold" 
                               Foreground="#2c3e50" HorizontalAlignment="Center" Margin="0,0,0,20"/>
                    
                    <Button Content="Add Product" Width="150" Height="40" 
                            Background="#28a745" Foreground="White" BorderThickness="0" 
                            FontWeight="SemiBold" Margin="0,5" Cursor="Hand" 
                            Command="{Binding AddCommand}">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                    CornerRadius="5" Padding="10">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#218838"/>
                                                </Trigger>
                                                <Trigger Property="IsEnabled" Value="False">
                                                    <Setter Property="Background" Value="#6c757d"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                    <Button Content="Edit Product" Width="150" Height="40" 
                            Background="#ffc107" Foreground="White" BorderThickness="0" 
                            FontWeight="SemiBold" Margin="0,5" Cursor="Hand" 
                            Command="{Binding EditCommand}">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                    CornerRadius="5" Padding="10">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#e0a800"/>
                                                </Trigger>
                                                <Trigger Property="IsEnabled" Value="False">
                                                    <Setter Property="Background" Value="#6c757d"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                    <Button Content="Delete Product" Width="150" Height="40" 
                            Background="#dc3545" Foreground="White" BorderThickness="0" 
                            FontWeight="SemiBold" Margin="0,5" Cursor="Hand" 
                            Command="{Binding DeleteCommand}">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                    CornerRadius="5" Padding="10">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#c82333"/>
                                                </Trigger>
                                                <Trigger Property="IsEnabled" Value="False">
                                                    <Setter Property="Background" Value="#6c757d"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Page>
