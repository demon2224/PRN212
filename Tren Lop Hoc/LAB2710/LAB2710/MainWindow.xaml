<Window x:Class="LAB2710.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LAB2710"
        xmlns:vm="clr-namespace:LAB2710.ViewModels"
        mc:Ignorable="d"
        Title="HomePage" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">
    
    <Window.DataContext>
        <vm:HomePageViewModel/>
    </Window.DataContext>
    
    <Grid Background="#F5F5F5">
        <Border Background="White" 
                CornerRadius="10" 
                Width="400" 
                Height="300"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
            
            <Border.Effect>
                <DropShadowEffect Color="Gray" BlurRadius="10" ShadowDepth="5" Opacity="0.3"/>
            </Border.Effect>
            
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="40">
                <!-- Header -->
                <Border Background="Orange" 
                        CornerRadius="5" 
                        Padding="20,15" 
                        Margin="0,0,0,30">
                    <TextBlock Text="GAME MANAGEMENT SYSTEM" 
                               FontSize="18" 
                               FontWeight="Bold" 
                               Foreground="White" 
                               HorizontalAlignment="Center"/>
                </Border>
                
                <!-- Welcome text -->
                <TextBlock Text="Welcome to your game database manager" 
                           FontSize="14" 
                           Foreground="Gray" 
                           HorizontalAlignment="Center" 
                           Margin="0,0,0,30"/>
                
                <!-- GO Button -->
                <Button Content="GO" 
                        FontSize="16" 
                        FontWeight="Bold" 
                        Width="120" 
                        Height="40" 
                        Command="{Binding GoToManagePageCommand}"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#007ACC"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="5" 
                                                BorderThickness="{TemplateBinding BorderThickness}">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#005A9B"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                
                <!-- Footer -->
                <TextBlock Text="© 2025 Game Management System" 
                           FontSize="10" 
                           Foreground="Gray" 
                           HorizontalAlignment="Center" 
                           Margin="0,30,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
