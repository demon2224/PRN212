using LAB2710.Models;
using Microsoft.EntityFrameworkCore;

namespace LAB2710.Data
{
    public static class DataSeeder
    {
        public static async Task SeedDataAsync()
        {
            using var context = new GameDbContext();
            
            // Áp dụng migrations để tạo/cập nhật database
            await context.Database.MigrateAsync();
            
            // Kiểm tra xem đã có dữ liệu chưa
            if (await context.Games.AnyAsync())
            {
                return; // Đã có dữ liệu rồi
            }
            
            // Thêm dữ liệu mẫu với ReleaseDate
            var games = new List<Game>
            {
                new Game { Title = "Valorant", Genre = "FPS", Price = 0, ReleaseDate = new DateTime(2020, 6, 2) },
                new Game { Title = "Minecraft", Genre = "Sandbox", Price = 19.99, ReleaseDate = new DateTime(2011, 11, 18) },
                new Game { Title = "Genshin Impact", Genre = "Adventure", Price = 0, ReleaseDate = new DateTime(2020, 9, 28) },
                new Game { Title = "The Witcher 3", Genre = "RPG", Price = 29.99, ReleaseDate = new DateTime(2015, 5, 19) },
                new Game { Title = "Cyberpunk 2077", Genre = "RPG", Price = 59.99, ReleaseDate = new DateTime(2020, 12, 10) },
                new Game { Title = "DOOM Eternal", Genre = "FPS", Price = 49.99, ReleaseDate = new DateTime(2020, 3, 20) },
                new Game { Title = "League of Legends", Genre = "MOBA", Price = 0, ReleaseDate = new DateTime(2009, 10, 27) }
            };
            
            context.Games.AddRange(games);
            await context.SaveChangesAsync();
        }
    }
}