<Window x:Class="WPF_Tu_Hoc.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Tu_Hoc"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="dtgSach" ItemsSource="{Binding Saches}" Margin="26,142,0,92" RenderTransformOrigin="0.508,1.865" AutoGenerateColumns="False" HorizontalAlignment="Left" Width="719" Loaded="DataGrid_Loaded">
            <DataGrid.Columns>
            <DataGridTextColumn Header="id" Binding="{Binding Id}"/>
            <DataGridTextColumn Header="tenSach" Binding="{Binding TenSach}"/>
            <DataGridTextColumn Header="giaBan" Binding="{Binding GiaBan}"/>
            <DataGridTextColumn Header="namXuatBan" Binding="{Binding NamXuatBan}"/>
        </DataGrid.Columns>
    </DataGrid>
        <Button x:Name="btnAdd" Content="Add" HorizontalAlignment="Left" Margin="82,285,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.481,-0.671" Click="btnAdd_Click"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="366,300,0,0" VerticalAlignment="Top" RenderTransformOrigin="2.867,0.781"/>
    </Grid>
</Window>
