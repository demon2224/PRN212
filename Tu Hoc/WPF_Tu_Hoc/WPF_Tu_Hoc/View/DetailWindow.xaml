<Window x:Class="WPF_Tu_Hoc.View.DetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Tu_Hoc.View"
        mc:Ignorable="d"
        Title="DetailWindow" Height="450" Width="800">
    <Grid>
        <Label x:Name="lblID" Content="id" HorizontalContentAlignment="Center"
           VerticalContentAlignment="Center" Margin="55,50,608,0" VerticalAlignment="Top" Background="#FFDC2626" FontSize="20" RenderTransformOrigin="0.5,0.5" Height="37">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleY="-1.076"/>
                    <RotateTransform Angle="0.942"/>
                    <TranslateTransform Y="-0.535"/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        <TextBox x:Name="txtID" HorizontalAlignment="Center" Margin="0,51,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="253" Height="37"/>

        <Label x:Name="lblTenSach" Content="Ten Sach" HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center" Margin="55,143,605,0" VerticalAlignment="Top" Background="#FFDC2626" FontSize="20"/>
        <TextBox x:Name="txtTenSach" HorizontalAlignment="Center" Margin="0,143,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="252" Height="37"/>

        <Label x:Name="lblIDGiaBan" Content="Gia Ban" HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center" Margin="55,217,605,0" VerticalAlignment="Top" Background="#FFDC2626" FontSize="20"/>
        <TextBox x:Name="txtGiaBan" HorizontalAlignment="Center" Margin="0,217,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="253" Height="37"/>

        <Label x:Name="lblIDNamXuatBan" Content="Nam Xuat Ban" HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center" Margin="55,296,605,0" VerticalAlignment="Top" Background="#FFDC2626" FontSize="20"/>
        <TextBox x:Name="txtNamXuatBan" HorizontalAlignment="Center" Margin="0,296,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="253" Height="37"/>
        <Button x:Name="btnSubmit" Content="Submit" HorizontalAlignment="Left" Margin="647,361,0,0" VerticalAlignment="Top" Width="78" Height="32" Click="btnSubmit_Click"/>
    </Grid>
</Window>
