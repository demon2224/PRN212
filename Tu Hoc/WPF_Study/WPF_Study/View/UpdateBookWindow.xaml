<Window x:Class="WPF_Study.View.UpdateBookWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Study.View"
        mc:Ignorable="d"
        Title="UpdateBookWindow" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <TextBlock Text="Tên Sách:"/>
            <TextBox Text="{Binding SelectedBook.BookName, UpdateSourceTrigger=PropertyChanged}"/>
        </StackPanel>

        <StackPanel Grid.Row="1">
            <TextBlock Text="Mô tả:"/>
            <TextBox Text="{Binding SelectedBook.Description, UpdateSourceTrigger=PropertyChanged}"/>
        </StackPanel>

        <StackPanel Grid.Row="2">
            <TextBlock Text="Năm XB:"/>
            <TextBox Text="{Binding SelectedBook.PublicationDate, UpdateSourceTrigger=PropertyChanged}"/>
        </StackPanel>

        <StackPanel Grid.Row="3">
            <TextBlock Text="Số lượng:"/>
            <TextBox Text="{Binding SelectedBook.Quantity, UpdateSourceTrigger=PropertyChanged}"/>
        </StackPanel>

        <StackPanel Grid.Row="4">
            <TextBlock Text="Giá:"/>
            <TextBox Text="{Binding SelectedBook.Price, UpdateSourceTrigger=PropertyChanged}"/>
        </StackPanel>

        <StackPanel Grid.Row="5">
            <TextBlock Text="Tác giả:"/>
            <TextBox Text="{Binding SelectedBook.Author, UpdateSourceTrigger=PropertyChanged}"/>
        </StackPanel>

        <StackPanel Grid.Row="6">
            <TextBlock Text="Loại sách:"/>
            <ComboBox ItemsSource="{Binding Categories}"
              DisplayMemberPath="BookGenreType"
              SelectedValuePath="BookCategoryId"
              SelectedValue="{Binding SelectedBook.BookCategoryId, Mode=TwoWay}"/>
        </StackPanel>

        <StackPanel Grid.Row="7" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Thêm" Width="80" Margin="5" Command="{Binding UpdateBookCommand}"/>
            <Button Content="Hủy" Width="80" Margin="5" Command="{Binding CloseUpdateBookWindowCommand}"/>
        </StackPanel>
    </Grid>
</Window>
