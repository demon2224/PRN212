<Window x:Class="WPF_Study.view.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Study.view"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="997" WindowStartupLocation="CenterScreen">
    <Grid Margin="0,0,237,0">
        <DataGrid ItemsSource="{Binding Books}" SelectedItem="{Binding SelectedBook, Mode=TwoWay}" AutoGenerateColumns="False" Margin="10,10,-220,156">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding BookId}" Width="50"/>
                <DataGridTextColumn Header="Tên Sách" Binding="{Binding BookName}" Width="200"/>
                <DataGridTextColumn Header="Mô tả" Binding="{Binding Description}" Width="100"/>
                <DataGridTextColumn Header="Năm XB" Binding="{Binding PublicationDate}" Width="100"/>
                <DataGridTextColumn Header="Số lượng" Binding="{Binding Quantity}" Width="100"/>
                <DataGridTextColumn Header="Giá" Binding="{Binding Price}" Width="100"/>
                <DataGridTextColumn Header="Tác giả" Binding="{Binding Author}" Width="100"/>
                <DataGridTextColumn Header="Loại sách" Binding="{Binding BookCategory.BookGenreType}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button x:Name="btnAddBook"  Command="{Binding OpenAddBookCommand}"  Content="Add Book" HorizontalAlignment="Left" Margin="10,335,0,0" VerticalAlignment="Top" Width="100" Height="38"/>
        <Button x:Name="btnUpdateBook" Command="{Binding OpenUpdateBookCommand}" Content="Update Book" HorizontalAlignment="Left" Margin="139,335,0,0" VerticalAlignment="Top" Width="100" Height="38"/>
        <Button x:Name="btnDeleteBook" Command="{Binding DeleteBookCommand}" Content="Delete" HorizontalAlignment="Left" Margin="271,335,0,0" VerticalAlignment="Top" Width="100" Height="38"/>
    </Grid>
</Window>