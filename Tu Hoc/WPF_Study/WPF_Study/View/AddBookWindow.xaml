<Window x:Class="WPF_Study.View.AddBookWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Thêm Sách" Height="400" Width="759">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <TextBlock Text="Tên Sách:"/>
            <TextBox Text="{Binding NewBook.BookName, UpdateSourceTrigger=PropertyChanged}"/>
        </StackPanel>

        <StackPanel Grid.Row="1">
            <TextBlock Text="Mô tả:"/>
            <TextBox Text="{Binding NewBook.Description, UpdateSourceTrigger=PropertyChanged}"/>
        </StackPanel>

        <StackPanel Grid.Row="2">
            <TextBlock Text="Năm XB:"/>
            <TextBox Text="{Binding NewBook.PublicationDate, UpdateSourceTrigger=PropertyChanged}"/>
        </StackPanel>

        <StackPanel Grid.Row="3">
            <TextBlock Text="Số lượng:"/>
            <TextBox Text="{Binding NewBook.Quantity, UpdateSourceTrigger=PropertyChanged}"/>
        </StackPanel>

        <StackPanel Grid.Row="4">
            <TextBlock Text="Giá:"/>
            <TextBox Text="{Binding NewBook.Price, UpdateSourceTrigger=PropertyChanged}"/>
        </StackPanel>

        <StackPanel Grid.Row="5">
            <TextBlock Text="Tác giả:"/>
            <TextBox Text="{Binding NewBook.Author, UpdateSourceTrigger=PropertyChanged}"/>
        </StackPanel>

        <StackPanel Grid.Row="6">
        <TextBlock Text="Loại sách:"/>
        <ComboBox ItemsSource="{Binding Categories}"
                      DisplayMemberPath="BookGenreType"
                      SelectedValuePath="BookCategoryId"
                      SelectedValue="{Binding NewBook.BookCategoryId, Mode=TwoWay}"/>
        </StackPanel>

        <StackPanel Grid.Row="7" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Thêm" Width="80" Margin="5" Command="{Binding AddBookCommand}"/>
            <Button Content="Hủy" Width="80" Margin="5" Command="{Binding CloseAddBookWindowCommand}"/>
        </StackPanel>
    </Grid>
</Window>