<Window x:Class="AnhTuanPEChuan.View.WatchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Watch Management" Height="550" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Search -->
            <RowDefinition Height="*"/>
            <!-- DataGrid -->
            <RowDefinition Height="Auto"/>
            <!-- Buttons -->
        </Grid.RowDefinitions>

        <!-- 🔍 Search -->
        <TextBox Grid.Row="0"
                 Width="200"
                 Margin="0,0,0,10"
                 Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" />

        <!-- 📋 DataGrid (cho phép nhập dòng mới) -->
        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding Watches}"
                  SelectedItem="{Binding SelectedWatch, Mode=TwoWay}"
                  AutoGenerateColumns="False"
                  IsReadOnly="False"
                  CanUserAddRows="True"
                  SelectionMode="Single"
                  Margin="0,5,0,5">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID"
                                    Binding="{Binding WatchId}"
                                    IsReadOnly="True"
                                    Width="Auto" />
                <DataGridTextColumn Header="Name"
                                    Binding="{Binding WatchName, UpdateSourceTrigger=PropertyChanged}"
                                    Width="*" />
                <DataGridTextColumn Header="Price"
                                    Binding="{Binding Price, UpdateSourceTrigger=PropertyChanged}"
                                    Width="Auto" />
                <DataGridTextColumn Header="Description"
                                    Binding="{Binding Description, UpdateSourceTrigger=PropertyChanged}"
                                    Width="2*" />
                <DataGridTextColumn Header="Brand"
                    Binding="{Binding Brand.BrandName}"
                    Width="Auto"/>

            </DataGrid.Columns>
        </DataGrid>

        <!-- 🧰 Buttons -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,5">
            <Button Content="Add"
                    Width="80"
                    Margin="5"
                    Command="{Binding AddCommand}" />
            <Button Content="Update"
                    Width="80"
                    Margin="5"
                    Command="{Binding UpdateCommand}" />
            <Button Content="Delete"
                    Width="80"
                    Margin="5"
                    Command="{Binding DeleteCommand}" />
        </StackPanel>
    </Grid>
</Window>
